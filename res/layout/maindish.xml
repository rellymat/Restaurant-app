<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/maindishb">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Main Dishes !"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="40dp"
        android:background="@color/colorPrimary"></TextView>

    <Button
        android:id="@+id/back"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:text="Back"></Button>
    <Button
        android:id="@+id/sList"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:text="List"></Button>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hamburger_pic"
                android:layout_width="161dp"
                android:layout_height="173dp"
                app:srcCompat="@drawable/hamburger" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textStyle="bold"
                android:background="@color/colorPrimary"
                android:text="Hamburger       15$" />

            <Button
                android:id="@+id/hamburger_button"
                android:layout_width="141dp"
                android:layout_height="49dp"
                android:text="Add to Order" />

            <ImageView
                android:id="@+id/steak_pic"
                android:layout_width="161dp"
                android:layout_height="173dp"
                app:srcCompat="@drawable/steak" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:typeface="monospace"
                android:textStyle="bold"
                android:text="Steak        20$" />

            <Button
                android:id="@+id/steak_button"
                android:layout_width="141dp"
                android:layout_height="49dp"
                android:text="Add to Order" />

            <ImageView
                android:id="@+id/pizza_pic"
                android:layout_width="161dp"
                android:layout_height="173dp"
                app:srcCompat="@drawable/pizza" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Pizza      10$" />

            <Button
                android:id="@+id/pizza_button"
                android:layout_width="141dp"
                android:layout_height="49dp"
                android:text="Add to Order" />

            <ImageView
                android:id="@+id/salmon_pic"
                android:layout_width="161dp"
                android:layout_height="173dp"
                app:srcCompat="@drawable/salmon" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:typeface="monospace"
                android:textStyle="bold"
                android:text="Salmon     25$" />

            <Button
                android:id="@+id/salmon_button"
                android:layout_width="141dp"
                android:layout_height="49dp"
                android:text="Add to Order" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>