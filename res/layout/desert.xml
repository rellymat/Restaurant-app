<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/desserts">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/colorPrimary"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:text="One last Bite !"></TextView>

    <Button
        android:id="@+id/back"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:text="Back"></Button>
    <Button
        android:id="@+id/sList"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:text="List"></Button>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pancake_pic"
                android:layout_width="161dp"
                android:layout_height="173dp"
                app:srcCompat="@drawable/breakfast"></ImageView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:typeface="monospace"
                android:textStyle="bold"
                android:text="Pancake     8$" />

            <Button
                android:id="@+id/pancake_button"
                android:layout_width="141dp"
                android:layout_height="49dp"
                android:text="Add to Order" />
            <ImageView
                android:id="@+id/cake_pic"
                android:layout_width="161dp"
                android:layout_height="173dp"
                app:srcCompat="@drawable/cheesecake" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:typeface="monospace"
                android:textStyle="bold"
                android:text="Cheese Cake      6$" />

            <Button
                android:id="@+id/cake_button"
                android:layout_width="141dp"
                android:layout_height="49dp"
                android:text="Add to Order" />
            <ImageView
                android:id="@+id/muffin_pic"
                android:layout_width="161dp"
                android:layout_height="173dp"
                app:srcCompat="@drawable/muffin" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:typeface="monospace"
                android:textStyle="bold"
                android:text="Muffin        3$" />

            <Button
                android:id="@+id/muffin_button"
                android:layout_width="141dp"
                android:layout_height="49dp"
                android:text="Add to Order" />
            <ImageView
                android:id="@+id/waffle_pic"
                android:layout_width="161dp"
                android:layout_height="173dp"
                app:srcCompat="@drawable/waffle" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:typeface="monospace"
                android:textStyle="bold"
                android:text="Waffle      11$" />

            <Button
                android:id="@+id/waffle_button"
                android:layout_width="141dp"
                android:layout_height="49dp"
                android:text="Add to Order" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>